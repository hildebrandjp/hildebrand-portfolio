{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "strict": true,
    "outDir": "assets/js",
    "rootDir": "_assets",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": [
      "@rspack/core/module",
      "jquery"
    ],
    "paths": {
      "@/*": ["_assets/js/*"]
    },
    "baseUrl": ".",
  },
  "include": [
    "_assets/**/*",
    "_assets/declaration.d.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}